<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script> <!-- Tailwind CDN -->
</head>

<body class="flex flex-col items-center justify-center min-h-screen py-8 font-sans bg-gradient-to-r from-teal-400 via-blue-500 to-indigo-600">

    <h1 class="mb-10 text-5xl font-extrabold text-white">BrainSync Assistant</h1>

    <!-- Error Message -->
    <% if (typeof error !== 'undefined' && error) { %>
        <p class="mb-4 text-red-600"><%= error %></p>
    <% } %>

    <!-- Login Form -->
    <form action="/login" method="POST" class="w-full max-w-lg p-8 space-y-6 bg-white rounded-lg shadow-xl">
        <div>
            <label for="email" class="text-xl font-semibold text-gray-800">Email</label>
            <input type="email" name="email" id="email" class="w-full p-4 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500" placeholder="youremail@example.com" required>
        </div>

        <div>
            <label for="password" class="text-xl font-semibold text-gray-800">Password</label>
            <div class="relative">
                <input type="password" name="password" id="password" class="w-full p-4 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500" placeholder="Enter your password" required>
                <button type="button" onclick="togglePassword()" class="absolute transform -translate-y-1/2 top-1/2 right-3">
                    <img id="toggle-icon" src="https://img.icons8.com/ios-filled/30/000000/invisible.png" alt="Toggle visibility" />
                </button>
            </div>
        </div>

        <button type="submit" class="w-full py-3 text-white rounded-md bg-gradient-to-r from-teal-500 to-blue-600 hover:from-teal-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-teal-500">Login</button>
    </form>

    <!-- Register Link with Styling -->
    <p class="mt-6 text-sm text-center text-gray-600">
        <span class="text-gray-200">Don't have an account?</span> 
        <a href="register" class="text-white font-semibold hover:underline">Register here</a>
    </p>

    <script>
        // JavaScript to toggle password visibility
        function togglePassword() {
            var passwordField = document.getElementById('password');
            var toggleIcon = document.getElementById('toggle-icon');
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.src = 'https://img.icons8.com/ios-filled/30/000000/visible.png';  // Eye icon for visible password
            } else {
                passwordField.type = 'password';
                toggleIcon.src = 'https://img.icons8.com/ios-filled/30/000000/invisible.png';  // Eye icon for hidden password
            }
        }
    </script>

</body>

</html>
