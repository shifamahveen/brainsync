    <!-- JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            lucide.createIcons(); // Fix for Lucide icons not appearing
        });

        gsap.from("h1, h2", {opacity: 0, y: 30, duration: 1, stagger: 0.3});
        gsap.from("p", {opacity: 0, x: -30, duration: 1, stagger: 0.2});
    
        document.addEventListener("DOMContentLoaded", function () {
            const dropdownBtn = document.getElementById("sessionDropdownBtn");
            const dropdownMenu = document.getElementById("sessionDropdownMenu");
    
            dropdownBtn.addEventListener("click", function (event) {
                event.stopPropagation(); // Prevent click from bubbling up
                dropdownMenu.classList.toggle("hidden");
            });
    
            document.addEventListener("click", function (event) {
                if (!dropdownBtn.contains(event.target) && !dropdownMenu.contains(event.target)) {
                    dropdownMenu.classList.add("hidden");
                }
            });
        });
    </script>

</body>
</html>
